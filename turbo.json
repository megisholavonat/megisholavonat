{
    "$schema": "https://turborepo.com/schema.json",
    "ui": "tui",
    "tasks": {
        "build": {
            "env": ["SKIP_*"],
            "dependsOn": ["^build"],
            "outputs": ["dist/**", ".next/**"]
        },
        "dev": {
            "dependsOn": ["^build"],
            "persistent": true,
            "cache": false
        }
    }
}
